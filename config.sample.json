{
    "version": "1.0.0",
    "encoding": "UTF-8",
    "database_json_path": "database/database.json",
    "server": "do_json.php",
    "database_tablename": "table1",
    "json_pretty_print": true,
    "uploads_path": "uploads/",
    "pageLength": 10,
    "id_field_name": "_id",
    "columntypes": ["textbox", "textarea", "select", "date", "time", "file", "image", "sound", "video"],
    "columns":[
        {
            "id": "username",
            "name": "Username",
            "type": "textbox",
            "icon": "fa-th-large",
            "width": "100px",
            "required": true,
            "default_value": "",
            "sortable": true,
            "searchable": true,
            "bold": true,
            "isEmail": false
        },
		{
            "id": "content",
            "name": "Content",
            "type": "textarea",
            "icon": "fa-th-large",
            "width": "100px",
            "required": false,
            "default_value": "",
            "excerpt_words_count": 20,
            "use_editor": true
        },
		{
            "id": "select",
            "name": "Select",
            "type": "select",
            "icon": "fa-th-large",
            "width": "100px",
            "required": true,
            "values": {"select 10": 10, "select 20": 20},
            "default_value": 10
        },
        {
            "id": "date",
            "name": "Date",
            "type": "date",
            "icon": "fa-calendar",
            "width": "100px",
            "required": false,
            "default_value": "12.08.2019",
            "dateFormat": "dd.mm.yy"
        },
        {
            "id": "time",
            "name": "Time",
            "type": "time",
            "icon": "fa-clock-o",
            "width": "100px",
            "required": false,
            "default_value": "",
            "timeFormat": "HH:mm"
        },
		{
            "id": "file",
            "name": "File",
            "type": "file",
            "icon": "fa-file",
            "width": "100px",
            "required": false
        },
		{
            "id": "image",
            "name": "Image",
            "type": "image",
            "icon": "fa-image",
            "width": "100px",
            "required": false
        },
		{
            "id": "sound",
            "name": "Sound",
            "type": "sound",
            "icon": "fa-file-audio-o",
            "width": "100px",
            "required": false
        },
		{
            "id": "video",
            "name": "Video",
            "type": "video",
            "icon": "fa-video-camera",
            "width": "100px",
            "required": false
        }
    ]
}